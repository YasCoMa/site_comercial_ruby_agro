<h1>Listing pagamentos</h1>

<table>
  <tr>
    <th>Tipo</th>
    <th>Bandeira card</th>
    <th>Nome card</th>
    <th>Numero card</th>
    <th>Validade card</th>
    <th>Codsecure card</th>
    <th>Num parcela card</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pagamentos.each do |pagamento| %>
  <tr>
    <td><%= pagamento.tipo %></td>
    <td><%= pagamento.bandeira_card %></td>
    <td><%= pagamento.nome_card %></td>
    <td><%= pagamento.numero_card %></td>
    <td><%= pagamento.validade_card %></td>
    <td><%= pagamento.codSecure_card %></td>
    <td><%= pagamento.num_parcela_card %></td>
    <td><%= link_to 'Show', pagamento %></td>
    <td><%= link_to 'Edit', edit_pagamento_path(pagamento) %></td>
    <td><%= link_to 'Destroy', pagamento, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

