									<div id='coluna_comum'><%= link_to 'Editar', edit_item_path(item) %></div>
									<div id='coluna_comum'><%= link_to 'Excluir', item, confirm: 'Tem certeza que quer excluir este item?', method: :delete %></div>
								</div>
							<% end %>	
