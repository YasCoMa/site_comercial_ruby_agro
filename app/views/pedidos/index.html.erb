							<% end %>
							<div id='coluna_pedido'>Total: R$ <%= valor_tot %></div>
							<div id='coluna_pedido'><%= link_to 'Finalizar', "/addEndereco" %></div>
						</div>
						
						<div id='itens'>
							<% Item.find(:all, :conditions => ["pedido_id=?", pedido.id]).each do |item| %>
								<div id='linha'>
