<h1>Listing enderecos</h1>

<table >
  <tr>
    <th>Nome</th>
    <th>Cep</th>
    <th>Logradouro</th>
    <th>Numero</th>
    <th>Complemento</th>
    <th>Info ref</th>
    <th>Bairro</th>
    <th>Cidade</th>
    <th>Estado</th>
    <th>Cliente</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @enderecos.each do |endereco| %>
  <tr>
    <td><%= endereco.nome %></td>
    <td><%= endereco.cep %></td>
    <td><%= endereco.logradouro %></td>
    <td><%= endereco.numero %></td>
    <td><%= endereco.complemento %></td>
    <td><%= endereco.info_ref %></td>
    <td><%= endereco.bairro %></td>
    <td><%= endereco.cidade %></td>
    <td><%= endereco.estado %></td>
    <td><%= endereco.cliente_id %></td>
    <td><%= link_to 'Show', endereco %></td>
    <td><%= link_to 'Edit', edit_endereco_path(endereco) %></td>
    <td><%= link_to 'Destroy', endereco, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

