<h1>Listing items</h1>

<table>
  <tr>
    <th>Quantidade</th>
    <th>Produto</th>
    <th>Pedido</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.quantidade %></td>
    <td><%= item.produto_id %></td>
    <td><%= item.pedido_id %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

